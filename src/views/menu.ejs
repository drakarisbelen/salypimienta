<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
    
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav.ejs') %>

    <!-- Header -->
    <%- include('./partials/header.ejs') %>
        <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
            <br>
            <!-- AGREGO FOREACH DINAMICO -->
            <% platos.forEach( platos => { %>
            <h1 class="ps-center"> <%= platos.name %> </h1>
            <br />
            <h4 class="ps-center">  <%= platos.description %> </h4>
            <p class="ps-text-grey"> <%= platos.price %> </p>
            <p class="ps-text-grey"><a href=<%= '/detalle/' + platos.id %>>Ver m√°s acerca de este plato</a></p>
            <% }); %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>
  

      <!-- Footer -->
      <%- include ("./partials/footer.ejs") %>
    </div>
  </body>
</html>
